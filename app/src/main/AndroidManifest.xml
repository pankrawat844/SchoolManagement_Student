<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.schoolmanagementstudent">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.app.schoolmanagementstudent.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.app.schoolmanagementstudent.WebviewActivity"></activity>
        <activity android:name="com.app.schoolmanagementstudent.businfo.BusInfoActivity" />
        <activity android:name="com.app.schoolmanagementstudent.utils.FullScreenActivity"></activity>
        <activity android:name="com.app.schoolmanagementstudent.complaint.ComplaintActivity" />
        <activity android:name="com.app.schoolmanagementstudent.upcomingtest.UpcomingTest" />
        <activity android:name="com.app.schoolmanagementstudent.attendance.StudentListActivity" />
        <activity android:name="com.app.schoolmanagementstudent.notice.NoticeActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name="com.app.schoolmanagementstudent.attendance.AttendenceActivity" />
        <activity android:name="com.app.schoolmanagementstudent.homework.HomeworkActivity" />
        <activity android:name="com.app.schoolmanagementstudent.login.LoginActivity" />
        <activity android:name="com.app.schoolmanagementstudent.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.app.schoolmanagementteacher.SplashActivity" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.app.schoolmanagementstudent.HomeActivity" />
        <activity
            android:name="lv.chi.photopicker.utils.CameraActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name="com.app.schoolmanagementstudent.timetable.TimeTableActivity" />
        <activity android:name="com.app.schoolmanagementstudent.videos.VideosActivity" />
        <activity android:name="com.app.schoolmanagementstudent.videos.YoutubeDetailActivity" />
        <activity android:name="com.app.schoolmanagementstudent.leave.LeaveActivity" />
        <activity android:name="com.app.schoolmanagementstudent.feeinfo.FeeInfoActivity" />
        <activity android:name="com.app.schoolmanagementstudent.result.ResultActivity" />
        <activity android:name="com.app.schoolmanagementstudent.event.EventActivity" />
        <activity android:name=".login.schoollogin.SchoolLoginActivity" />
        <activity android:name=".login.studentlogin.StudentLoginActivity" />
        <activity android:name=".login.studentsignup.StudentSignupActivity" />
    </application>

</manifest>